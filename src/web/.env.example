# Application Configuration
# Version: 1.0.0
# Description: Example environment configuration file for the Detection Translation Platform web frontend

# API Configuration
# Base URL for the API gateway
VITE_API_BASE_URL=http://localhost:3000/api/v1

# API request timeout in milliseconds (30 seconds)
VITE_API_TIMEOUT=30000

# Number of API request retry attempts
VITE_API_RETRY_ATTEMPTS=3

# Auth0 Authentication Configuration
# Auth0 domain for authentication
VITE_AUTH0_DOMAIN=your-tenant.auth0.com

# Auth0 client ID for application
VITE_AUTH0_CLIENT_ID=your-client-id

# Auth0 API audience identifier
VITE_AUTH0_AUDIENCE=https://api.detection-translator.com

# Auth0 permission scopes
VITE_AUTH0_SCOPE=openid profile email

# Security Configuration
# Token expiry buffer time in milliseconds (5 minutes)
VITE_TOKEN_EXPIRY_BUFFER=300000

# Session timeout duration in milliseconds (1 hour)
VITE_SESSION_TIMEOUT=3600000

# Enable/disable multi-factor authentication
VITE_MFA_ENABLED=true

# Application Information
# Application name for display
VITE_APP_NAME=Detection Translator

# Application version
VITE_APP_VERSION=1.0.0

# Storage Configuration
# Encryption key for secure storage (32-byte key)
VITE_STORAGE_ENCRYPTION_KEY=your-secure-32-byte-encryption-key

# Rate Limiting Configuration
# Single translation requests per minute
VITE_RATE_LIMIT_SINGLE=100

# Batch translation requests per minute
VITE_RATE_LIMIT_BATCH=10

# GitHub operations requests per hour
VITE_RATE_LIMIT_GITHUB=30

# Validation requests per minute
VITE_RATE_LIMIT_VALIDATION=200

# Development Configuration
# Enable debug logging (true for development, false for production)
VITE_DEBUG_ENABLED=false

# Enable PII protection (should be true in production)
VITE_PII_PROTECTION_ENABLED=true