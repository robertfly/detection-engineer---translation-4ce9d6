{
  "name": "@detection-translator/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for the Detection Translation Platform with enhanced security and observability",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist coverage",
    "security:audit": "npm audit",
    "docker:build": "docker build -t api-gateway .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@opentelemetry/api": "1.4.1",
    "@opentelemetry/sdk-node": "0.41.1",
    "amqplib": "0.10.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-prometheus-middleware": "1.2.0",
    "express-rate-limit": "7.1.5",
    "express-validator": "7.0.1",
    "helmet": "7.1.0",
    "http-errors": "2.0.0",
    "ioredis": "5.3.2",
    "jsonwebtoken": "9.0.2",
    "mongodb": "6.1.0",
    "mongoose": "7.6.3",
    "morgan": "1.10.0",
    "node-cache": "5.1.2",
    "opossum": "6.0.0",
    "pino": "8.15.1",
    "prom-client": "14.2.0",
    "rate-limit-redis": "4.0.0",
    "rate-limiter-flexible": "2.4.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@jest/types": "29.0.0",
    "@types/amqplib": "0.10.2",
    "@types/compression": "1.7.4",
    "@types/cors": "2.8.14",
    "@types/express": "4.17.18",
    "@types/http-errors": "2.0.3",
    "@types/jest": "29.5.5",
    "@types/jsonwebtoken": "9.0.3",
    "@types/morgan": "1.9.6",
    "@types/node": "20.8.2",
    "@types/supertest": "2.0.14",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "ioredis-mock": "8.9.0",
    "jest": "29.7.0",
    "jest-mock-express": "0.2.2",
    "jest-mock-req-res": "1.0.2",
    "nock": "13.3.8",
    "prettier": "3.0.3",
    "redis-mock": "0.56.3",
    "rimraf": "5.0.5",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/organization/detection-translator.git"
  },
  "keywords": [
    "api-gateway",
    "security",
    "detection-translation",
    "typescript",
    "express"
  ],
