{
  "name": "@detection-translator/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for the Detection Translation Platform with enhanced security and observability",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist coverage",
    "security:audit": "npm audit",
    "docker:build": "docker build -t api-gateway .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/sdk-node": "0.57.0",
    "amqplib": "0.10.5",
    "compression": "1.7.5",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-prometheus-middleware": "1.2.0",
    "express-rate-limit": "7.5.0",
    "express-validator": "7.2.1",
    "helmet": "8.0.0",
    "http-errors": "2.0.0",
    "ioredis": "5.4.2",
    "jsonwebtoken": "9.0.2",
    "mongodb": "6.12.0",
    "mongoose": "8.9.4",
    "morgan": "1.10.0",
    "node-cache": "5.1.2",
    "opossum": "8.4.0",
    "pino": "9.6.0",
    "prom-client": "15.1.3",
    "rate-limit-redis": "4.2.0",
    "rate-limiter-flexible": "5.0.4",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@jest/types": "29.6.3",
    "@types/amqplib": "0.10.6",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/http-errors": "2.0.4",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.7",
    "@types/morgan": "1.9.9",
    "@types/node": "22.10.5",
    "@types/supertest": "2.0.14",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "eslint": "9.18.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.7",
    "ioredis-mock": "8.9.0",
    "jest": "29.7.0",
    "jest-mock-express": "0.2.2",
    "jest-mock-req-res": "1.0.2",
    "nock": "13.5.6",
    "prettier": "3.4.2",
    "redis-mock": "0.56.3",
    "rimraf": "6.0.1",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-node-dev": "2.0.0",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/organization/detection-translator.git"
  },
  "keywords": [
    "api-gateway",
    "security",
    "detection-translation",
    "typescript",
    "express"
  ],
